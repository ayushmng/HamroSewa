<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.ayush.myapplication.Fragmentation.Tab3">

    <ScrollView android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:id="@+id/missioncardview"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp">

                <TextView android:id="@+id/mission"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Our Mission"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:padding="10dp"
                    android:textColor="@color/NavyGreen"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About Helping Hand"
                    android:textSize="16dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="47dp"
                    android:textColor="@color/NavyGreen" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/visioncardview"
                android:layout_below="@+id/missioncardview"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp">

                <TextView android:id="@+id/vision"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Information about Helping Hand"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:padding="10dp"
                    android:textColor="@color/NavyGreen"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Information provided by Helping Hand"
                    android:textSize="16dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="47dp"
                    android:textColor="@color/NavyGreen" />

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:id="@+id/infocardview"
                android:layout_below="@+id/visioncardview"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp">

                <TextView android:id="@+id/info"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="App Information"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:padding="10dp"
                    android:textColor="@color/NavyGreen"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="View our app versions"
                    android:textSize="16dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="47dp"
                    android:textColor="@color/NavyGreen" />

            </android.support.v7.widget.CardView>

