            <!--</android.support.v7.widget.CardView>-->

            <android.support.v7.widget.CardView
                android:id="@+id/aboutappcardview"
                android:layout_below="@+id/infocardview"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:layout_margin="8dp"
                android:elevation="3dp"
                app:cardCornerRadius="5dp">

                <TextView android:id="@+id/aboutapp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="About HamroSewa"
                    android:textStyle="bold"
                    android:textSize="22dp"
                    android:padding="10dp"
                    android:textColor="@color/NavyGreen"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Information about HamroSewa app"
                    android:textSize="16dp"
                    android:paddingLeft="10dp"
                    android:layout_marginTop="47dp"
                    android:textColor="@color/NavyGreen" />

            </android.support.v7.widget.CardView>

        </RelativeLayout>

    </ScrollView>

